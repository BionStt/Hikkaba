@model Hikkaba.Web.ViewModels.CategoriesViewModels.CategoryEditViewModel
@{
    ViewData["Title"] = "Delete category";
}

<form asp-controller="Categories" asp-action="DeleteConfirmed" method="post" class="form-horizontal" enctype="multipart/form-data">
    <h4>@ViewData["Title"]</h4>
    <hr />

    <p>@($"/{Model.Alias} - {Model.Name}")</p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Delete</button>
        </div>
    </div>
</form>
